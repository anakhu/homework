{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "ignorePatterns": ["node_modules/", "spec/"],
    "rules": {
       "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
       "quotes": ["error", "single"],
       "max-len": ["error", { "code": 140 }],
       "newline-before-return": "error",
       "indent": ["error", 2],
       "no-unused-vars": "off",
       "no-console": "off",
       "no-use-before-define": "off",
       "no-shadow": "off"
    }
}
